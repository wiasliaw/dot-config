{
  "extends": "solhint:recommended",
  "rules": {
    "payable-fallback": "error",
    "reason-string": [
      "error",
      {
        "maxLength": 32
      }
    ],
    "comprehensive-interface": "warn",
    "func-param-name-mixedcase": "warn",
    "modifier-name-mixedcase": "warn",
    "private-vars-leading-underscore": [
      "warn",
      {
        "strict": true
      }
    ],
    "ordering": "warn",
    "compiler-version": "off"
  }
}
